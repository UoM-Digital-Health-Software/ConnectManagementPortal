<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd
                        http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd">

    <changeSet id="20220322180000-1" author="Paul">
        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="device"/>
            </not>
        </preConditions>

        <createTable tableName="device">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="user_id" type="bigint">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="platform" type="varchar(255)">
                <constraints nullable="false" />
            </column>
            <column name="token" type="varchar(1024)">
                <constraints unique="false" nullable="false" />
            </column>
        </createTable>


        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="device"
                                 constraintName="fk_device_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="radar_user"/>
    </changeSet>



</databaseChangeLog>
