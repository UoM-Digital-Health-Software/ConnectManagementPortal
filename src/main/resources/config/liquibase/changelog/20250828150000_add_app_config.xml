<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="
         http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.8.xsd">

    <!-- Create table for app configs / feature flags -->
    <changeSet id="1-create-app-config-table" author="you">
        <createTable tableName="app_config">
            <column name="id" type="BIGINT" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="site" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="user_id" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="key" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="value" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="type" type="VARCHAR(20)">
                <constraints nullable="false"/>
            </column>
            <column name="created_at"  type="timestamp" defaultValueDate="${now}" >
                <constraints nullable="false"/>
            </column>
            <column name="rollout_pct" type="INT">
                <constraints nullable="true"/>
            </column>
            <column name="rollout_version" type="VARCHAR(50)">
                <constraints nullable="true"/>
            </column>
            <column name="conditional" type="VARCHAR(200)">
                <constraints nullable="true"/>
            </column>
        </createTable>


    </changeSet>

    <changeSet id="2-insert-default-healthkit-upload" author="you">
        <insert tableName="app_config">
            <column name="site" valueComputed="NULL"/>
            <column name="user_id" valueComputed="NULL"/>
            <column name="key" value="healthkitUpload.enabled"/>
            <column name="value" value="true"/>
            <column name="type" value="bool"/>
            <column name="rollout_pct" value="50"/>
            <column name="rollout_version" value="v1"/>
            <column name="conditional" valueComputed="NULL"/>
        </insert>
    </changeSet>


    <changeSet id="3-insert-foreign-key" author="bastiaan@thehyve.nl">

        <modifyDataType tableName="app_config" columnName="user_id" newDataType="BIGINT"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="app_config"
                                 constraintName="fk_app_config_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="radar_user"/>
    </changeSet>
</databaseChangeLog>
